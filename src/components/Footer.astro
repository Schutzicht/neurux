---
import { Mail, Phone, MapPin } from 'lucide-react';
---

<footer id="contact" class="bg-[#050505] pt-20 pb-10 border-t border-white/10 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16 mb-20 text-center md:text-left">
      
        <a href="mailto:neurux@hz.nl" class="flex flex-col items-center gap-3 text-gray-400 hover:text-white transition-colors group">
          <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-[#29D9FF] group-hover:text-black transition-all shadow-[0_0_15px_rgba(0,0,0,0.5)] group-hover:shadow-[0_0_20px_#29D9FF]">
            <Mail className="w-6 h-6" />
          </div>
          <span class="text-sm font-mono tracking-wider">neurux@hz.nl</span>
        </a>

        <a href="tel:+31624681371" class="flex flex-col items-center gap-3 text-gray-400 hover:text-white transition-colors group">
            <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-[#29D9FF] group-hover:text-black transition-all shadow-[0_0_15px_rgba(0,0,0,0.5)] group-hover:shadow-[0_0_20px_#29D9FF]">
              <Phone className="w-6 h-6" />
            </div>
            <span class="text-sm font-mono tracking-wider">+31 6 24 68 13 71</span>
        </a>

        <div class="flex flex-col items-center gap-3 text-gray-400 hover:text-white transition-colors group">
            <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-[#29D9FF] group-hover:text-black transition-all shadow-[0_0_15px_rgba(0,0,0,0.5)] group-hover:shadow-[0_0_20px_#29D9FF]">
              <MapPin className="w-6 h-6" />
            </div>
            <span class="text-sm font-mono tracking-wider">Edisonweg 4, 4382 NW Vlissingen</span>
        </div>

    </div>

    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-start md:items-center text-gray-500 text-sm relative z-20">
      <div class="flex flex-col md:flex-row gap-4 items-start md:items-center text-left">
        <p>&copy; {new Date().getFullYear()} Neurux. Onderdeel van HZ University of Applied Sciences.</p>
        <span class="hidden md:inline text-gray-700">|</span>
        <a href="https://zee-zicht.nl" target="_blank" class="text-white relative group overflow-hidden">
            <span class="relative z-10 group-hover:text-[#29D9FF] transition-colors duration-300">Gemaakt door zee-zicht.nl</span>
            <div class="absolute inset-0 bg-[#29D9FF] opacity-0 group-hover:opacity-20 blur-lg transition-opacity duration-300"></div>
            <div class="absolute bottom-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#29D9FF] to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
        </a>
      </div>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href="#" class="hover:text-white transition-colors">Privacy</a>
        <a href="#" class="hover:text-white transition-colors">Algemene Voorwaarden</a>
      </div>
    </div>
  </div>

  {/* Giant Text Watermark */}
  <div class="absolute bottom-[-5%] left-1/2 transform -translate-x-1/2 w-full text-center pointer-events-none select-none overflow-hidden">
    <h1 class="text-[24vw] font-black text-transparent bg-clip-text bg-gradient-to-b from-[#29D9FF]/20 to-[#29D9FF]/5 leading-none tracking-tighter mix-blend-overlay uppercase whitespace-nowrap">
      TOT NEURUX
    </h1>
  </div>

  {/* Background Glow */}
  <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full h-96 bg-gradient-to-t from-[#39ff14]/5 to-transparent pointer-events-none z-0"></div>
</footer>
